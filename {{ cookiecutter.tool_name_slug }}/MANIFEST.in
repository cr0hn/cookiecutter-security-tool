include LICENSE CHANGELOG.md README.rst
include requirements.txt requirements-performance.txt

recursive-exclude * __pycache__
recursive-exclude * *.pyc
recursive-exclude * *.pyo
recursive-exclude * *.orig
recursive-exclude * .DS_Store
global-exclude __pycache__/*
global-exclude .cache
global-exclude .tox
global-exclude .deps/*
global-exclude *.so
global-exclude *.pyd
global-exclude *.pyc
global-exclude .git*
global-exclude .DS_Store
global-exclude .mailmap

prune {{ cookiecutter.tool_name_slug }}/doc*
prune {{ cookiecutter.tool_name_slug }}/test*
prune {{ cookiecutter.tool_name_slug }}/examples*
